<div class="score">
	<PostScore @model={{model}} />
</div>
<div class="thumbnail">
	{{#if model.is_self}}
		<!-- {{#link-to "subreddit.post" (subcleaner model.subreddit_name_prefixed) model.id}}
			<img src="/images/self-post.png" alt="">
		{{/link-to}} -->
		<a href="#" class="text-dark" {{action onSelection}}><img src="/images/self-post.png" alt=""></a>
	{{else}}
		<a href={{model.url}} target="_blank" rel="noopener">
			<img src={{model.thumbnail}} alt="">
		</a>
	{{/if}}
</div>
<div class="content">
	<h6>
		<a href="#" class="text-dark" {{action onSelection}}>{{model.title}}</a>
		
		<!-- {{#link-to "subreddit.post" (subcleaner model.subreddit_name_prefixed) model.id class="text-dark"}}{{model.title}}{{/link-to}} -->
		{{#unless model.is_self}}
			<small><a href={{model.url}} target="_blank" rel="noopener">{{url-helper model.url}}</a></small>
		{{/unless}}
		{{!-- <span class="badge badge-secondary">{{model}}</span> --}}
	</h6>
	<p class="mb-2">
		{{#link-to "subreddit" (subcleaner model.subreddit_name_prefixed)}}{{model.subreddit_name_prefixed}}{{/link-to}}
		&middot;
		Posted by {{#link-to "user" model.author.name}}u/{{model.author.name}}{{/link-to}}
		{{time-ago model.created}}
	</p>
	<PostActions @model={{model}} @onComments={{action onSelection}} />
</div>
